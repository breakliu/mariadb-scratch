# my.cnf

[client]
default-character-set           = utf8mb4
port                            = 3306
socket                          = /data/mariadb/run/mysqld.sock

# The MySQL server
[mysqld]
port                            = 3306
socket                          = /data/mariadb/run/mysqld.sock
pid-file                        = /data/mariadb/run/mysqld.pid
datadir                         = /data/mariadb/data
character-set-server            = utf8mb4
collation-server                = utf8mb4_unicode_ci

skip-external-locking

# Logs
log-error                       = /data/mariadb/logs/error.log
long_query_time                 = 3
slow_query_log                  = 1
slow_query_log_file             = /data/mariadb/logs/slow.log

# Binlog
expire_logs_days                = 30
log_bin                         = mysql-bin
binlog_format                   = mixed
#server-id                      = 123456
relay-log                       = relay-bin
master-retry-count              = 60
log-slave-updates
skip-slave-start

# MyISAM #
key-buffer-size                 = 32M
myisam-recover-options          = FORCE,BACKUP

# CACHES AND LIMITS #
max_allowed_packet              = 128M
tmp-table-size                  = 32M
max-heap-table-size             = 32M
query-cache-type                = 0
query-cache-size                = 0
max-connections                 = 1000
thread-cache-size               = 100
open_files_limit                = 102400
table-definition-cache          = 4096
table-open-cache                = 10240

# You can set .._buffer_pool_size up to 50 - 80 %
# of RAM but beware of setting memory usage too high
# INNODB #
innodb-flush-method             = O_DIRECT
innodb-log-files-in-group       = 2
innodb-log-file-size            = 512M
innodb-flush-log-at-trx-commit  = 1
innodb-file-per-table           = 1
innodb-buffer-pool-size         = 12G

# ...
lc_messages_dir                             = /data/mariadb/env/share

# Encryption
#plugin_dir                                  = /data/mariadb/env/lib/plugin
#plugin-load-add                             = file_key_management.so
#file_key_management_encryption_algorithm    = aes_cbc
#file_key_management_filekey                 = file_key_encrypt_key
#file_key_management_filename                = /data/mariadb/conf/file_key_enc.txt
#file_key_management_filename                = /data/mariadb/conf/file_key.txt

#innodb-encrypt-tables
#innodb-encrypt-log
#innodb-encryption-threads                   = 4

#encrypt-binlog
#encrypt_tmp_files
#encrypt_tmp_disk_tables
#aria_encrypt_tables

[mysqldump]
quick
max_allowed_packet      = 128M

[mysql]
no-auto-rehash
default-character-set   = utf8mb4

[isamchk]
key_buffer              = 20M
sort_buffer_size        = 20M
read_buffer             = 2M
write_buffer            = 2M

[myisamchk]
key_buffer_size         = 256M
sort_buffer_size        = 256M
read_buffer             = 2M
write_buffer            = 2M

[mysqlhotcopy]
interactive-timeout